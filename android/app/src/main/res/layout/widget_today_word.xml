<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background"
    android:gravity="top">

    <!-- Word + Level on same row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="vocabulary"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv.3"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/level_badge_background"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <!-- Pronunciation + Part of Speech on same row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/widget_pronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/vəˈkæbjʊləri/"
            android:textColor="#60A5FA"
            android:textSize="11sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/widget_part_of_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="noun"
            android:textColor="#80FFFFFF"
            android:textSize="10sp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <!-- Meaning - more lines -->
    <TextView
        android:id="@+id/widget_meaning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="단어, 어휘"
        android:textColor="#E5FFFFFF"
        android:textSize="13sp"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_marginTop="6dp" />

</LinearLayout>
